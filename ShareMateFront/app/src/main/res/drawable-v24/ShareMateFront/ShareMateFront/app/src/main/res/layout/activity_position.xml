            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="上海"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="成都"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="广州"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="深圳"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="厦门"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="石家庄"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@color/white"/>
